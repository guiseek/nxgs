{
  "name": "angular",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/angular/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/angular",
        "main": "packages/angular/src/index.ts",
        "tsConfig": "packages/angular/tsconfig.lib.json",
        "assets": [
          "packages/angular/*.md",
          {
            "input": "./packages/angular/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/angular/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/angular",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/angular",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs angular {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/angular/jest.config.ts"
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "angular",
        "postTargets": ["npm", "github"],
        "commitParserOptions": {
          "headerPattern": "^([A-Z]{3,}-\\d{1,5}):? (chore|docs|feat|fix|refactor)(?:\\(([\\w-]+)\\))?\\S* (.+)$",
          "headerCorrespondence": [
            "ticketReference",
            "type",
            "scope",
            "subject"
          ]
        }
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "{tag}",
        "notes": "{notes}"
      }
    },
    "npm": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    }
  },
  "tags": []
}
