{
  "name": "release",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/release/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/release",
        "main": "packages/release/src/index.ts",
        "tsConfig": "packages/release/tsconfig.lib.json",
        "assets": [
          "packages/release/*.md",
          {
            "input": "./packages/release/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/release/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/release",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/release",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs release {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/release/jest.config.ts"
      }
    },
    "release": {
      "executor": "@nxgs/release:release",
      "dependsOn": ["build"],
      "options": {
        "branches": [
          "main",
          {
            "name": "next",
            "prerelease": true
          }
        ],
        "buildTarget": "release:build",
        "repositoryUrl": "https://github.com/guiseek/nxgs",
        "github": true,
        "npm": true,
        "changelog": true,
        "tagFormat": "release-v${VERSION}",
        "outputPath": "dist/packages/release",
        "releaseRules": [
          {
            "type": "build",
            "scope": "deps",
            "release": "patch"
          },
          {
            "type": "docs",
            "scope": "README",
            "release": "patch"
          }
        ],
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "docs",
              "section": "Documentation",
              "hidden": true
            },
            {
              "type": "style",
              "section": "Styles",
              "hidden": true
            },
            {
              "type": "chore",
              "section": "Miscellaneous Chores",
              "hidden": true
            },
            {
              "type": "refactor",
              "section": "Code Refactoring",
              "hidden": true
            },
            {
              "type": "ci",
              "section": "Continuous Integration",
              "hidden": true
            }
          ]
        }
      }
    }
  },
  "tags": []
}
